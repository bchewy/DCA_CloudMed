@model WebRole1.Models.Patient

@{
    ViewBag.Title = "Delete";
}

<div class="container">
    <h4 class="text-center mt-2">Delete this patient?</h4>
    <hr />
    <div class="row">
        <div class="col-md-6">
            <img src="@Html.Raw(Model.PatientImageURL)" class="w-100 h-100" />
        </div>
        <div class="col-md-5">
            <div class="form-group">
                <strong>Patient Name:</strong><br />
                @Html.DisplayFor(model => model.Name)
            </div>
            <div class="form-group">
                <strong>Patient IC No:</strong><br />
                @Html.DisplayFor(model => model.ICNo)
            </div>
            <div class="form-group">
                <strong>Patient DOB:</strong><br />
                @Html.DisplayFor(model => model.DoB)
            </div>
            <div class="form-group">
                <strong>Patient Address:</strong><br />
                @Html.DisplayFor(model => model.Address)
            </div>
            <div class="form-group">
                <strong>Patient Citizenship:</strong><br />
                @Html.DisplayFor(model => model.Citizenship)
            </div>
            <div class="form-group">
                <strong>Patient Email:</strong><br />
                @Html.DisplayFor(model => model.EmailAddr)
            </div>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color">
                    <input type="submit" value="Delete" class="btn btn-danger" /> |
                    @Html.ActionLink("Back to List", "Index")
                </div>
            }
        </div>
    </div>


</div>
