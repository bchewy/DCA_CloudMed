@model IEnumerable<WebRole1.Models.MedicalRecord>

@{
    ViewBag.Title = "Index";
}
<div class="container">
    <h2>Index</h2>

    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Consultation.Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DocURL)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Illness)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Consultation.Status)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DocURL)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Illness)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.RecordID }) |
                    @Html.ActionLink("Details", "Details", new { id = item.RecordID }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.RecordID })
                </td>
            </tr>
        }

    </table>
</div>