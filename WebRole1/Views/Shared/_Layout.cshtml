<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link rel="stylesheet" href="https://bootswatch.com/4/minty/bootstrap.min.css" />
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css" integrity="sha384-UHRtZLI+pbxtHCWp1t77Bi1L4ZtiqrqD80Kn4Z8NTSRyMA2Fd33n5dQ8lWUE00s/" crossorigin="anonymous">

</head>
<body>
    <style>
        nav a{
            color:white;
        }
        table.table tbody tr td > a {
            color: black;
        }
        body, html {
            height: 100%;
            font-family: "Segoe UI Light","sans-serif";
        }
    </style>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <a class="navbar-brand" href="#">CloudMed <span style="color:red;"><i class="fas fa-medkit"></i></span></a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarColor01">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item px-2">
                    @Html.ActionLink("Home", "Index", "Home")
                </li>
                <li class="nav-item px-2">
                    @Html.ActionLink("Doctor", "Index", "Doctors")
                </li>
                <li class="nav-item px-2">
                    @Html.ActionLink("Patient", "Index", "Patients")

                </li>
                <li class="nav-item px-2">
                    @Html.ActionLink("Consultations", "Index", "Consultations")
                </li>
                <li class="nav-item px-2">@Html.ActionLink("MedicalRecords", "Index", "MedicalRecords") </li>
                <li class="nav-item px-2">@Html.ActionLink("MedicalEquipments", "Index", "MedicalEquipments") </li>
                <li class="nav-item px-2">@Html.ActionLink("Courses", "Index", "Courses") </li>

            </ul>
            @Html.Partial("_LoginPartial")
        </div>
    </nav>
    <div class="h-100">
        @RenderBody()
        <hr />
        <footer class="text-center lead">
            <p>&copy; @DateTime.Now.Year - CloudMed Inc.</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
